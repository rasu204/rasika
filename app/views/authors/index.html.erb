<p id="notice"><%= notice %></p>

<h1>Authors</h1>

<table>
  <thead>
    <tr>
      <th>Author Name</th>
      <th>Location</th>
      <th>Age</th>
      <th>Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= author.author_name %></td>
        <td><%= author.location %></td>
        <td><%= author.age %></td>
        <td><%= author.contact %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
